        <section id="main"><article id="post-AR-1" class="article article-type-post" itemscope itemprop="blogPost">
  <div class="article-meta">
    <a href="/AR/AR-1" class="article-date">
  <time datetime="2018-07-22T13:02:11.000Z" itemprop="datePublished">2018-07-22</time>
</a>
    
  <div class="article-category">
