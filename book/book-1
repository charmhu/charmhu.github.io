        <section id="main"><article id="post-book-1" class="article article-type-post" itemscope itemprop="blogPost">
  <div class="article-meta">
    <a href="/book/book-1" class="article-date">
  <time datetime="2018-07-24T13:05:05.000Z" itemprop="datePublished">2018-07-24</time>
